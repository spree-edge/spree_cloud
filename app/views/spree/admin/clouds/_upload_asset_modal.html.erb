<div class="modal fade" id="uploadCloudAssetModal" tabindex="-1" role="dialog" aria-labelledby="uploadCloudAssetModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <!-- Modal header -->
      <div class="modal-header border-top-0 bg-primary align-items-center">
        <h5 class="modal-title text-white" id="uploadCloudAssetModal">Upload Asset</h5>
        <button type="button" class="cloud-close-modal text-white" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <%= form_with(model: Spree::CloudAsset.new, url: spree.admin_clouds_path, method: :post, multipart: true, id: "upload-form") do |form| %>
          <div class="form-group">
            <%= form.label :attachment, 'Choose File', class: 'btn btn-primary' %>
            <%= form.file_field :attachment, class: 'cloud-upload-asset' %>
          </div>
          <div class="form-group">
            <%= form.label :alt, Spree.t(:alt_text) %>
            <%= form.text_area :alt, rows: 4, class: 'form-control' %>
          </div>
          <%= form.submit "Upload", class: "btn btn-primary", id: "upload-button", data: { turbo_frame: 'cloud_assets', disable_with: 'Uploading...' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
